extends  ../_skeleton

block variables
  - var activeIndex = 5

block title
  title Contacts

block page
  // Page Header
  include ../elements/_header

  // Page Content
  main.page-content

    // Google map with search
    .google-search
      .form-group
        label.small(for='address') Address
        input#address.form-control.input-width-1(type='search', placeholder='No title')
        button#trigger-search.btn.btn-sm.btn-primary.btn-primary-transparent.btn-max-width-sm Find Address
      // RD Google Map
      .rd-google-map
        #map.rd-google-map__model

    // Rd Mailform result field
    .rd-mailform-validate

    // RD Mailform
    form.rd-mailform(data-result-class='rd-mailform-validate', data-form-type='contact', method='post', action='bat/rd-mailform.php')
      input(type='text', name='name', data-constraints='@NotEmpty', placeholder='Name:')
      input(type='text', name='email', data-constraints='@NotEmpty @Email', placeholder='Email:')
      input(type="date", class="form-input", data-constraints='@Date', name="date", placeholder='Date:')
      textarea(type='text', name='message', data-constraints='@NotEmpty', placeholder='Message:')
      // RD SelectMenu
      label(for='select-1') Select:
        select#select-1.rd-mailform-select(name='select')
          option(value='Option 1') Option 1
          option(value='Option 2') Option 2
          option(value='Option 3') Option 3
          option(value='Option 4') Option 4
          option(value='Option 5') Option 5
      // RD DatePicker
      label.rd-mailform-time-picker
        input(type='text', name='time', placeholder='Pick a time:', data-constraints="@Time")
      // RD Filepicker
      .rd-file-picker
        input(name="file", type="file", multiple)
        .rd-file-picker-meta
        .rd-file-picker-btn Choose a file
      .rd-file-drop
        input(name="file", data-multiple-caption="{count} files selected", type="file", multiple)
        .rd-file-drop-wrap
          .rd-file-drop-btn Choose a file
            p or drag it here
        .rd-file-drop-meta
      // RD Toggles
      .range
        .col-sm-3
          label.mfToggle
            span Toggle:
            input.mfToggle__input(type='checkbox')
        .col-sm-3
          label.mfCheckbox
            span Checkbox:
            input.mfCheckbox__input(type='checkbox')
        .col-sm-3
          label.mfRadio
            span Label 1:
            input.mfRadio__input(name="test", value="1", type="radio")
        .col-sm-3
          label.mfRadio
            span Label 2:
            input.mfRadio__input(checked, name="test", value="2", type="radio")
      button.btn.btn-success Send

  // Page Footer
  include ../elements/_footer



